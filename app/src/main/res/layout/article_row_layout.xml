<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/article_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    android:background="@drawable/gray_border_bottom">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">

        <ImageView
            android:id="@+id/article_bookmark"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="2dp"
            app:srcCompat="@drawable/bookmark_unchecked" />

        <ImageView
            android:id="@+id/article_image"
            android:layout_width="78dp"
            android:layout_height="77dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"
            app:srcCompat="@drawable/gelecekbilimdelogo"
            android:transitionName="article_transition"/>

        <TextView
            android:id="@+id/article_headline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/article_bookmark"
            android:layout_toEndOf="@+id/article_image"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="2"
            android:text="TextViasddddddddddddddddddddddddddddddddddddddddew"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/article_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_headline"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/article_bookmark"
            android:layout_toEndOf="@+id/article_image"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:maxLines="3"
            android:text="asdasasssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssssdasdasd"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#dfdfdf" />

        <TextView
            android:id="@+id/article_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/article_desc"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:layout_alignParentEnd="true"
            android:textSize="13sp"
            android:text="TextView"
            android:textColor="#cdcdcd"
            android:textAppearance="@style/TextAppearance.AppCompat.Small" />
    </RelativeLayout>
</RelativeLayout>